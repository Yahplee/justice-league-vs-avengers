<article class="post">
  <div class="title">
    <a href="/posts/{{id}}">{{title}}</a>
  </div>
  <div class="meta">
    Created by {{user.username}} on {{format_date createdAt}} at {{format_time createdAt}}
    |
    <a href="/posts/{{id}}" style="color:tomato">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>